+void MidiHandler_mt32::MT32ReportHandler::printDebug(const char *fmt, va_list list) {
+	if (midiHandler_mt32.noise) {
+		char s[1024];
+		strcpy(s, "MT32: ");
+		vsnprintf(s + 6, 1017, fmt, list);
+		LOG_MSG(s);
+	}
